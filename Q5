#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <stdlib.h>

int main() {
    float numero, *ptr;

   	setlocale(LC_ALL, "Portuguese_Brazil");
   	
    printf("Digite um número real: ");
    scanf("%f", &numero);

    ptr = &numero;

    printf("O valor original é: %f\n", *ptr);
    printf("O dobro do valor é: %f\n", (*ptr)*2);


  system("pause");
    return 0;
}
